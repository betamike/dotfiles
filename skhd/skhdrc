# opens alacritty
alt - return : open -nb "org.alacritty"

# Navigation
alt - h : /opt/homebrew/bin/yabai -m window --focus west
alt - j : /opt/homebrew/bin/yabai -m window --focus south
alt - k : /opt/homebrew/bin/yabai -m window --focus north
alt - l : /opt/homebrew/bin/yabai -m window --focus east

# Combo stack and bsp nav
# alt - j : "${HOME}"/.local/bin/south_or_stack_next.sh
# alt - k : "${HOME}"/.local/bin/north_or_stack_prev.sh

# Navigating stack windows
ctrl + alt - j : /opt/homebrew/bin/yabai -m window --focus stack.next
ctrl + alt - k : /opt/homebrew/bin/yabai -m window --focus stack.prev

# Rotate space
alt - r : /opt/homebrew/bin/yabai -m space --rotate 90

# Moving windows
shift + alt - h : /opt/homebrew/bin/yabai -m window --warp west
shift + alt - j : /opt/homebrew/bin/yabai -m window --warp south
shift + alt - k : /opt/homebrew/bin/yabai -m window --warp north
shift + alt - l : /opt/homebrew/bin/yabai -m window --warp east

# Toggle window stack
alt - s : /opt/homebrew/bin/yabai -m window --insert stack

# Toggle window  split
alt - v : /opt/homebrew/bin/yabai -m window --toggle split

# Float window
shift + alt - space : /opt/homebrew/bin/yabai -m window --toggle float;\
                      /opt/homebrew/bin/yabai -m window --layer above

# float / unfloat window and center  at top of screen
alt - t : /opt/homebrew/bin/yabai -m window --toggle float;\
          /opt/homebrew/bin/yabai -m window --grid 4:4:1:0:2:2

shift + alt - p: /opt/homebrew/bin/yabai -m config bottom_padding 400
shift + alt - n: /opt/homebrew/bin/yabai -m config bottom_padding 0

# Fullscreen window
alt - f         : /opt/homebrew/bin/yabai -m window --toggle zoom-fullscreen
shift + alt - f : /opt/homebrew/bin/yabai -m window --toggle native-fullscreen

# Move focus container to workspace
shift + alt - 1 : /opt/homebrew/bin/yabai -m window --space 1
shift + alt - 2 : /opt/homebrew/bin/yabai -m window --space 2
shift + alt - 3 : /opt/homebrew/bin/yabai -m window --space 3
shift + alt - 4 : /opt/homebrew/bin/yabai -m window --space 4
shift + alt - 5 : /opt/homebrew/bin/yabai -m window --space 5
shift + alt - 6 : /opt/homebrew/bin/yabai -m window --space 6
